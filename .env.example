# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000

# Documents Configuration
# Comma-separated list of folders to index (supports ~ for home directory)
DOCUMENTS_FOLDERS=~/Documents,~/Desktop,~/Downloads,./documents,~/OneDrive,~/OneDrive - *,~/Library/CloudStorage/OneDrive-*
# Watch for new/changed documents
WATCH_DOCUMENTS=true
# Exclude patterns (comma-separated, supports wildcards)
EXCLUDE_PATTERNS=node_modules,*.app,*.dmg,*.pkg,.git,.DS_Store,*.tmp,*.temp,~$*

# File Upload Configuration (optional - for manual uploads)
MAX_FILE_SIZE=10485760

# Box Cloud Storage Configuration
# Get credentials from https://app.box.com/developers/console
# 1. Create a new app or use existing
# 2. Choose "Custom App" with "Server Authentication (with JWT)" or "OAuth 2.0"
# 3. For quick testing, use Developer Token (expires in 60 minutes)
# 4. For production, implement OAuth 2.0 flow
BOX_CLIENT_ID=your_box_client_id_here
BOX_CLIENT_SECRET=your_box_client_secret_here
BOX_DEVELOPER_TOKEN=your_box_developer_token_here
BOX_ENABLED=false
# Comma-separated list of Box folder IDs to index (default: 0 for root)
# To find folder IDs: Open folder in Box web UI, the ID is in the URL
# Example: https://app.box.com/folder/123456789 -> folder ID is 123456789
# You can specify multiple folders: BOX_FOLDER_IDS=123456789,987654321,555555555
BOX_FOLDER_IDS=0